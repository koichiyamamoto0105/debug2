<% book_comments.each do |book_comment| %>
   <tr><td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td></tr><br>
     <tr><td><%= book_comment.user.name %></td></tr>
	    <tr><td><%= book_comment.comment %></td><br>
                       
      <td><% if book_comment.user_id == current_user.id %>
	     <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger destroy_book" %>
      <% end %>
      <% end %>
      </td>
      </tr>
 
 
